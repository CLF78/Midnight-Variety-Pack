{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "python configure.py ${input:clean} --loglevel=${input:loglevel} ${input:game_file_wanted} && ninja",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "focus": true,
        "clear": true
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": [
              "/c"
            ]
          }
        }
      }
    },
    {
      "label": "Launch Mod on Dolphin",
      "type": "shell",
      "command": "scripts/launch_dolphin.sh",
      "args": [
        "${input:dolphin_emulator}",
        "${workspaceFolder}/out/mvp.json"
      ],
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Check Current File with Clang-Tidy",
      "command": "python",
      "args": [
        "scripts/run_tidy.py",
        "-file",
        "${file}"
      ],
      "problemMatcher": [
        {
          "owner": "gcc-problem-matcher",
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": [
            {
              "regexp": "^(.*?):(\\d+):(\\d*):?\\s+(?:fatal\\s+)?(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ],
      "presentation": {
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Check Entire Project with Clang-Tidy",
      "command": "python",
      "args": [
        "scripts/run_tidy.py"
      ],
      "problemMatcher": [
        {
          "owner": "gcc-problem-matcher",
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": [
            {
              "regexp": "^(.*?):(\\d+):(\\d*):?\\s+(?:fatal\\s+)?(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ],
      "presentation": {
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ],
  "inputs": [
    {
      "id": "loglevel",
      "type": "pickString",
      "description": "What log levels should be enabled?",
      "default": "DEBUG",
      "options": [
        {
          "label": "Debug",
          "value": "DEBUG",
        },
        {
          "label": "Warning",
          "value": "WARN",
        },
        {
          "label": "Error",
          "value": "ERROR",
        },
        {
          "label": "Fatal",
          "value": "FATAL",
        },
      ]
    },
    {
      "id": "clean",
      "type": "pickString",
      "description": "Should the output be cleaned first?",
      "default": "",
      "options": [
        {
          "label": "No",
          "value": "",
        },
        {
          "label": "Yes",
          "value": "--clean",
        }
      ]
    },
    {
      "id": "game_file_wanted",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "description": "Do you want to locate a copy of Mario Kart Wii to generate a quick launch preset?",
        "default": "",
        "options": [
          ["No", ""],
          ["Use previously selected file", "${remember:game_file}"],
          ["Open game file", "${openDialog:pick_game_file}"]
        ],
        "rememberTransformed": true,
        "key": "game_file",
        "openDialog": {
          "pick_game_file": {
            "defaultUri": "${workspaceFolder}",
            "filters": {
              "Wii Game": [
                "iso",
                "ciso",
                "wbfs",
                "rvz",
                "wia"
              ],
            },
            "title": "Choose a copy of Mario Kart Wii",
            "transform": {
              "text": "--game-path=${file}",
            }
          }
        }
      }
    },
    {
      "id": "dolphin_emulator",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "description": "Select the Dolphin Emulator executable",
        "default": "",
        "options": [
          [
            "Use previously selected file",
            "${remember:dolphin_emu}"
          ],
          [
            "Select Dolphin Emulator executable",
            "${openDialog:pick_dolphin_emu}"
          ]
        ],
        "rememberTransformed": true,
        "key": "dolphin_emu",
        "openDialog": {
          "pick_dolphin_emu": {
            "defaultUri": "${workspaceFolder}",
            "title": "Choose a copy of Dolphin Emulator",
          }
        }
      }
    }
  ]
}
