{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "type": "shell",
        "command": "python configure.py --loglevel=${input:loglevel} && ninja",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "focus": true,
          "clear": true
        },
        "runOptions": {
          "reevaluateOnRerun": false
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Build Clean",
        "type": "shell",
        "command": "python configure.py --loglevel=${input:loglevel} --clean && ninja",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "focus": true,
          "clear": true
        },
        "runOptions": {
          "reevaluateOnRerun": false
        },
        "group": "build"
      }
    ],
    "inputs": [
        {
          "id": "loglevel",
          "type": "pickString",
          "description": "The log level to be used.",
          "default": "DEBUG",
          "options": [
            {
              "label": "Debug",
              "value": "DEBUG",
            },
            {
              "label": "Warning",
              "value": "WARN",
            },
            {
              "label": "Error",
              "value": "ERROR",
            },
            {
              "label": "Fatal",
              "value": "FATAL",
            },
          ]
        }
      ]
}
